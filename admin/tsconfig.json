{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "dom.iterable"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}